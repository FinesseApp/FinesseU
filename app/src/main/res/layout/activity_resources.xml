<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg_gradient"
    tools:context="com.osalaam.immersionproj2.ResourcesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources Page"
        android:background="#FFFFFF"
        />

    <Button
        android:id="@+id/uploading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="UPLOAD"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>

    <Button
        android:id="@+id/homeworksource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="HOMEWORK"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>

    <Button
        android:id="@+id/textbooksource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TEXT BOOKS"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>

    <Button
        android:id="@+id/examsource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="OLD EXAMS"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>



</LinearLayout>