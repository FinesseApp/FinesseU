<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_gradient"
    tools:context="com.osalaam.immersionproj2.ResourcesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="154dp"
            app:srcCompat="@drawable/howard"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="120dp"
                android:layout_weight="2"
                android:layout_marginLeft="50dp"
                app:srcCompat="@drawable/finesse" />

            <TextView
                android:layout_marginTop="50dp"
                android:textSize="50dp"
                android:textColor="#FFFFFF"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="INESSE" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resources Page"
        android:background="#FFFFFF"
        />

    <Button
        android:id="@+id/uploading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="UPLOAD"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>

    <Button
        android:id="@+id/homeworksource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Homework"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>

    <Button
        android:id="@+id/textbooksource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Text Books"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>

    <Button
        android:id="@+id/examsource"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Exams"
        android:elevation="4dp"
        android:background="#FFFFFF">
    </Button>



</LinearLayout>